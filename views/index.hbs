<div class="container">

  <div class="col text-center">
    <h1>URL Shortener</h1>
    <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" alt=""
      width="250" height="250" style="margin: 30px">
  </div>

  <div class="url-shortener col-sm-5 mx-auto mb-3">
    <form action="/shorten-url" method="POST" class="mb-3">
      <label for="ori_url" class="form-label text-center">Original URL:</label>
      <div class="input-group">
        <input type="url" class="form-control" id="ori_url" value="{{ori_url}}" name="ori_url"
          placeholder="Enter an URL" required>
        <div class="input-group-append">
          <button type="submit" class="btn btn-primary">Shorten URL</button>
        </div>
      </div>
    </form>

    {{#if new_url}}
    <div class="form-group">
      <label for="new_url">New URL</label>
      <div class="input-group">
        <input class="form-control" type="text" value="{{new_url}}" aria-label="readonly input example" name="new_url"
          id="new_url" readonly>
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" style="width:120px" type="button" onclick="copy()">Copy</button>
        </div>

        <script>
          function copy() {
            const URL = document.getElementById('new_url');
            URL.select()
            navigator.clipboard.writeText(URL.value)
            alert("Copied the url: " + URL.value)
          }
        </script>

      </div>
      {{/if}}
    </div>


  </div>